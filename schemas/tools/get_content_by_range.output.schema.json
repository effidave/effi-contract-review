{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "get_content_by_range.output",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "blocks",
    "truncated",
    "next_page"
  ],
  "properties": {
    "blocks": {
      "type": "array",
      "description": "Ordered list of blocks within the requested range.",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "text"
        ],
        "properties": {
          "id": {
            "type": "string",
            "description": "Identifier of the block."
          },
          "text": {
            "type": "string",
            "description": "Block content with optional redaction applied."
          }
        }
      }
    },
    "truncated": {
      "type": "boolean",
      "description": "Indicates whether the result was truncated due to caps."
    },
    "next_page": {
      "type": [
        "object",
        "null"
      ],
      "description": "Contains pagination parameters when additional content is available.",
      "additionalProperties": false,
      "required": [
        "start_block",
        "end_block"
      ],
      "properties": {
        "start_block": {
          "type": "integer",
          "minimum": 0,
          "description": "Zero-based index for the next page start."
        },
        "end_block": {
          "type": "integer",
          "minimum": 0,
          "description": "Zero-based index for the next page end."
        }
      }
    }
  }
}
