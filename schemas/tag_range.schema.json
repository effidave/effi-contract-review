{
  "$id": "https://example.local/schemas/tag_range.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "TagRange",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "label", "start_marker_id", "end_marker_id", "status"],
  "properties": {
    "id":         {"type":"string","pattern":"^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-4[0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"},
    "label":      {"type":"string","minLength":1},
    "start_marker_id": {"type":"string","pattern":"^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-4[0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"},
    "end_marker_id":   {"type":"string","pattern":"^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-4[0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"},
    "attributes": {"type":"object","additionalProperties":true},
    "anchors": {
      "type":"object",
      "additionalProperties": false,
      "properties": {
        "start": {
          "type":"object","additionalProperties":false,
          "properties":{
            "text_hash":{"type":"string","pattern":"^sha256:[0-9a-f]{64}$"},
            "near_block_id":{"type":"string","pattern":"^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-4[0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"},
            "style_sig":{"type":["string","null"]}
          }
        },
        "end": {
          "type":"object","additionalProperties":false,
          "properties":{
            "text_hash":{"type":"string","pattern":"^sha256:[0-9a-f]{64}$"},
            "near_block_id":{"type":"string","pattern":"^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-4[0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"},
            "style_sig":{"type":["string","null"]}
          }
        }
      }
    },
    "created_at": {"type":"string","format":"date-time"},
    "updated_at": {"type":"string","format":"date-time"},
    "status": {"type":"string","enum":["active","broken","repaired"]}
  },
"allOf": [
    {
      "if": { "properties": { "label": { "const": "block" } } },
      "then": {
        "properties": {
          "attributes": {
            "type": "object",
            "additionalProperties": true,
            "required": ["block_id"],
            "properties": {
              "block_id": {
                "type": "string",
                "description": "The UUID of the block this system range originally spanned.",
                "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-4[0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"
              }
            }
          }
        }
      }
    }
  ]

}
