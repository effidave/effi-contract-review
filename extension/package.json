{
  "name": "effi-contract-viewer",
  "displayName": "Effi Contract Viewer",
  "description": "Interactive document analysis and clause navigation for Word contracts",
  "version": "0.1.0",
  "publisher": "effidave",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "effi-explorer",
          "title": "Effi Projects",
          "icon": "$(book)"
        }
      ]
    },
    "views": {
      "effi-explorer": [
        {
          "id": "effiProjects",
          "name": "Select a Project"
        }
      ]
    },
    "commands": [
      {
        "command": "effi-contract-viewer.showWebview",
        "title": "Effi: Show Contract Analysis",
        "icon": "$(book)"
      },
      {
        "command": "effi-contract-viewer.analyzeDocument",
        "title": "Effi: Analyze Document"
      },
      {
        "command": "effi-contract-viewer.refreshView",
        "title": "Effi: Refresh View",
        "icon": "$(refresh)"
      },
      {
        "command": "effi-contract-viewer.loadAnalysis",
        "title": "Effi: Load Analysis from Workspace"
      },
      {
        "command": "effi-contract-viewer.analyzeAndLoad",
        "title": "Effi: Analyze and Load Document"
      },
      {
        "command": "effi-contract-viewer.saveDocument",
        "title": "Effi: Save Document",
        "icon": "$(save)"
      },
      {
        "command": "effi-contract-viewer.saveCheckpoint",
        "title": "Effi: Save Checkpoint",
        "icon": "$(milestone)"
      },
      {
        "command": "effi-contract-viewer.showHistory",
        "title": "Effi: Show Version History",
        "icon": "$(history)"
      }
    ],
    "keybindings": [
      {
        "command": "effi-contract-viewer.refreshView",
        "key": "ctrl+l",
        "mac": "cmd+l",
        "when": "effiContractViewerActive"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "effi-contract-viewer.showWebview"
        },
        {
          "command": "effi-contract-viewer.analyzeDocument"
        },
        {
          "command": "effi-contract-viewer.refreshView",
          "when": "effiContractViewerActive"
        }
      ],
      "editor/title": [
        {
          "command": "effi-contract-viewer.showWebview",
          "when": "resourceExtname == .docx",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Effi Contract Viewer",
      "properties": {
        "effiContractViewer.mcpServerCommand": {
          "type": "string",
          "default": "python -m effilocal.mcp_server.main",
          "description": "Command to start the MCP server"
        },
        "effiContractViewer.pythonPath": {
          "type": "string",
          "default": ".venv/Scripts/python.exe",
          "description": "Path to Python interpreter (relative to workspace root)"
        },
        "effiContractViewer.autoAnalyze": {
          "type": "boolean",
          "default": false,
          "description": "Automatically analyze documents when opening .docx files"
        },
        "effiContractViewer.showNumberingMetadata": {
          "type": "boolean",
          "default": false,
          "description": "Show detailed numbering metadata (numId, counters, etc.)"
        },
        "effiContractViewer.autoCommit": {
          "type": "boolean",
          "default": true,
          "description": "Automatically commit changes to git when saving documents"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "20.x",
    "@types/vscode": "^1.85.0",
    "@types/vscode-webview": "^1.57.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-electron": "^2.3.8",
    "esbuild": "^0.19.11",
    "eslint": "^8.56.0",
    "jest": "^30.2.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.4.6",
    "typescript": "^5.3.3"
  }
}
