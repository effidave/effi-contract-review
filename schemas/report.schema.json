{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://effi-local/schemas/report.schema.json",
  "title": "Shared diagnostics report",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "flow",
    "doc_id",
    "question",
    "model",
    "timings",
    "budget",
    "redaction",
    "tool_path",
    "answer",
    "errors"
  ],
  "properties": {
    "flow": {
      "type": "string",
      "minLength": 1
    },
    "doc_id": {
      "type": "string",
      "minLength": 1
    },
    "question": {
      "type": [
        "string",
        "null"
      ]
    },
    "model": {
      "type": [
        "string",
        "null"
      ]
    },
    "timings": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "total_ms"
      ],
      "properties": {
        "total_ms": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "budget": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "prompt_tokens",
        "completion_tokens",
        "max_tokens"
      ],
      "properties": {
        "prompt_tokens": {
          "type": "integer",
          "minimum": 0
        },
        "completion_tokens": {
          "type": "integer",
          "minimum": 0
        },
        "max_tokens": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "redaction": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "applied"
      ],
      "properties": {
        "applied": {
          "type": "boolean"
        }
      }
    },
    "tool_path": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "tool",
          "args_digest",
          "result"
        ],
        "properties": {
          "tool": {
            "type": "string",
            "minLength": 1
          },
          "args_digest": {
            "type": "string",
            "minLength": 1
          },
          "page": {
            "type": [
              "string",
              "integer",
              "null"
            ]
          },
          "result": {
            "type": "object",
            "required": [
              "truncated"
            ],
            "properties": {
              "truncated": {
                "type": "boolean"
              },
              "next_page": {
                "type": [
                  "string",
                  "integer",
                  "null"
                ]
              }
            },
            "additionalProperties": true
          }
        }
      }
    },
    "answer": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "summary",
        "sources"
      ],
      "properties": {
        "summary": {
          "type": "string"
        },
        "sources": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "id": {
                "type": "string"
              },
              "section_id": {
                "type": "string"
              },
              "range": {
                "type": "string"
              },
              "block_id": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "errors": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "metadata": {
      "type": "object",
      "description": "Optional additional metadata namespaced per flow.",
      "additionalProperties": true
    }
  }
}
